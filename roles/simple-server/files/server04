auto eth0
iface eth0 inet dhcp

auto eth1
iface eth1 inet manual
        bond-master lacpbond

auto eth2
iface eth2 inet manual
        bond-master lacpbond

auto lacpbond
iface lacpbond inet static
        address 192.168.1.104/24
        bond-mode 802.3ad
        bond-miimon 100
        bond-lacp-rate 1
        bond-slaves none
        vlan-raw-device lacpbond

auto lacpbond.120
iface lacpbond.120 inet static
        address 192.168.120.104/24
        vlan-raw-device lacpbond

auto lacpbond.130
iface lacpbond.130 inet static
        address 192.168.130.104/24
        vlan-raw-device lacpbond

auto lacpbond.140
iface lacpbond.140 inet static
        address 192.168.140.104/24
        vlan-raw-device lacpbond

auto lacpbond.150
iface lacpbond.150 inet static
        address 192.168.150.104/24     
        vlan-raw-device lacpbond
   
        

      